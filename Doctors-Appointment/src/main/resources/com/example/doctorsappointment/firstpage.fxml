<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="400.0" prefWidth="600.0"
            stylesheets="@app.css"
            style="-fx-background-color: linear-gradient(to right, #e8d9c6, #d6c2af);"
            xmlns="http://javafx.com/javafx/25"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.doctorsappointment.firstpageController">

    <VBox alignment="CENTER" spacing="25"
          AnchorPane.topAnchor="30.0" AnchorPane.bottomAnchor="30.0"
          AnchorPane.leftAnchor="30.0" AnchorPane.rightAnchor="30.0">

        <Text text="Welcome to the Doctor's Appointment Management System"
              styleClass="title-text">
            <font>
                <Font name="Bodoni MT Bold Italic" size="20.0"/>
            </font>
        </Text>

        <Text text="Are you a Patient or a Doctor?"
              style="-fx-fill: #3b2f2f;">
            <font>
                <Font name="Arial Rounded MT Bold" size="16.0"/>
            </font>
        </Text>

        <HBox spacing="20" alignment="CENTER">
            <Button fx:id="btnPatient" text="Patient"
                    styleClass="main-button"/>
            <Button fx:id="btnDoctor" text="Doctor"
                    styleClass="main-button"/>
        </HBox>

    </VBox>

</AnchorPane>
