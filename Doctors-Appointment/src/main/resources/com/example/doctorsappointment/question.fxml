<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<VBox xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.doctorsappointment.QuestionController"
      alignment="CENTER"
      spacing="20"
      prefWidth="800"
      prefHeight="600">

    <Text text="Patient Details"
          style="-fx-font-size: 22; -fx-font-weight: bold;" />

    <TextField fx:id="nameField"
               promptText="Enter patient name"
               maxWidth="300"/>

    <TextField fx:id="phoneField"
               promptText="Enter phone number"
               maxWidth="300"/>

    <Text fx:id="questionText"
          style="-fx-font-size: 18; -fx-text-alignment: center;" />

    <Button text="YES" onAction="#onYes" prefWidth="120"/>
    <Button text="NO" onAction="#onNo" prefWidth="120"/>

</VBox>
