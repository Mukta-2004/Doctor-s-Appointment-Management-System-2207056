<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.text.Text?>

<AnchorPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.doctorsappointment.AvailabilityController">

    <VBox alignment="CENTER" spacing="20"
          AnchorPane.topAnchor="0" AnchorPane.bottomAnchor="0"
          AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0">

        <Text wrappingWidth="300" textAlignment="CENTER"
              text="Sorry, no slots are available.\nChoose another doctor?"/>
        <HBox spacing="20" alignment="CENTER">
            <Button text="YES" onAction="#goBack"/>
            <Button text="NO" onAction="#exit"/>
        </HBox>

    </VBox>

</AnchorPane>
