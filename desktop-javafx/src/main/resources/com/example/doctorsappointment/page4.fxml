<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<VBox xmlns="http://javafx.com/javafx/25"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.doctorsappointment.Page4Controller"
      alignment="CENTER"
      spacing="40"
      prefHeight="400"
      prefWidth="600"
      stylesheets="@app.css"
      styleClass="gradient-bg">

    <Label text="Do you want to cancel this appointment?">
        <font>
            <Font size="20"/>
        </font>
    </Label>

    <HBox spacing="50" alignment="CENTER">
        <Button text="YES" fx:id="btnYes" styleClass="main-button"/>
        <Button text="NO" fx:id="btnNo" styleClass="main-button"/>
    </HBox>

</VBox>
